<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="flex flex-col sm:flex-row justify-start md:justify-between items-start my-5 bg-gray-100 p-4 rounded-lg gap-2">
    <div class="space-y-2">
      <h1 class="text-2xl font-bold md:text-3xl md:leading-tight w-full">
        Addresses</h1>
    </div>
    <div class="flex justify-start sm:justify-end items-center gap-2 w-full ">
      <button type="button" class="py-2 px-3 flex items-center justify-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none  ">
        Add new address
      </button>
      <a href="{{ routes.account_url }}" class="py-2 px-3 flex items-center justify-center gap-x-2 text-sm font-semibold  rounded-lg border border-blue-600 text-blue-600 hover:border-blue-500 hover:text-blue-500 disabled:opacity-50 disabled:pointer-events-none  text-center">
        Back to account</a>
    </div>
  </div>
  <div>
    {% paginate customer.addresses by 12 %}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {% for address in customer.addresses %}


          <div class="flex flex-col bg-white border shadow-sm rounded-xl ">
            <div class="p-4 md:p-5">
              <div class="flex gap-2">
                <h3 class="text-lg font-bold text-gray-800 ">
                  {{ address.city | capitalize }}
                </h3>
                {% if address == customer.default_address %}
                  <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ">Default</span>
                {% endif %}
              </div>
              <div class="mt-1 text-gray-500 h-[120px] overflow-hidden">
                {{ address | format_address }}
              </div>
              <div class="flex justify-end gap-2">
                <a class="mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="#">
                  Edit
                </a>
                <a class="mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-600 text-white hover:bg-red-700 disabled:opacity-50 disabled:pointer-events-none" href="#">
                  Delete
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endpaginate %}
  </div>
</div>