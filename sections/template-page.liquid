<div class="max-w-3xl px-4 pt-6 lg:pt-10 pb-12 sm:px-6 lg:px-8 mx-auto">
  <article class="space-y-3">
    <h1 class="text-2xl font-bold md:text-3xl text-center">{{ page.title }}</h1>
    {% if section.settings.content_alignment == "center" %}
      {% assign textAlign = "text-center" %}
    {% else %}
      {% assign textAlign = "text-left" %}
    {% endif %}

    <div class="text-lg text-gray-800 {{ textAlign }}">
      {{ page.content }}</div>
  </article>
</div>

{% schema %}
  {
    "name": "Page",
    "settings": [
      {
        "type": "radio",
        "id": "content_alignment",
        "label": "Content Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }
        ]
      }
    ]
  }
{% endschema %}