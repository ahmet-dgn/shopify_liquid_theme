<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  {% paginate collection.products by section.settings.number_of_product %}
    <h1 class="text-2xl font-bold md:text-4xl md:leading-tight w-full text-center mb-4 flex-1">{{ collection.title }}</h1>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
      {% for product in collection.products %}
        {% render 'product-card'
          , product: product %}
      {% else %}
        <p class="text-center w-full">There are no products inside of this collection.</p>
      {% endfor %}
    </div>

    <div class="mt-12 text-center flex justify-center">
      {% render 'pagination'
        , pagination: paginate %}
    </div>
  {% endpaginate %}
</div>
{% schema %}
  {
    "name": "Collection",
    "settings": [
      {
        "type": "range",
        "id": "number_of_product",
        "step": 1,
        "min": 1,
        "max": 24,
        "default": 12,
        "label": "Product Per Page"

      }
    ]
  }
{% endschema %}