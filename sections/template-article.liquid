<div class="max-w-3xl px-4 pt-6 lg:pt-10 pb-12 sm:px-6 lg:px-8 mx-auto">
  <article class="space-y-3">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'article_title' %}
          <a href=" {{ blog.url }}" class="text-base text-neutral-500 hover:text-neutral-800 ">
            {{ blog.title }}</a>
          <h1 class="text-2xl font-bold md:text-3xl">{{ article.title }}</h1>

        {% when 'article_author' %}
          {% if section.settings.enable_author %}
            <small class="block my-1 font-semibold text-gray-800">{{ article.author | upcase }}</small>
          {% endif %}
        {% when 'article_published_date' %}
          {% if section.settings.enable_published_date %}
            <time class="my-1 block text-xs text-gray-500" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
              {{ article.published_at | date: format: 'on_date' }}</time>
          {% endif %}


        {% when 'featured_image' %}
          {% if article.image != blank %}
            <img
              src="{{ article.image | image_url: width: 672, height: 420}}"
              width="672"
              height="400"
              class="w-full rounded-lg object-cover object-center"
              alt=" {{ article.image.alt }}">
          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full object-cover object-center p-5 bg-sky-100 rounded-lg ' }}
          {% endif %}
        {% when 'article_content' %}
          <div class=" text-lg text-gray-800">
            {{ article.content }}</div>
          {% else %}
      {% endcase %}
    {% endfor %}
  </article>
  {% if blog.comments_enabled? %}
    <div id="comments" class="my-8 text-neutral-500">
      {% if article.comments_count > 0 %}
      {% else %}
        There are no comments for this article.
      {% endif %}
    </div>
    <div id="comment_form" class="">
      {% form 'new_comment'
        , article %}
        <div class="flex-1 mx-auto items-center justify-center">
          <div class="px-1 md:flex mb-3">
            <div class="px-3md:w-1/2">
              <div class="sm:col-span-3">
                <label for="first-name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="first-name"
                    id="first-name"
                    autocomplete="given-name"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
              </div>
            </div>
            <div class="px-3md:w-1/2"></div>
          </div>
        </div>
      {% endform %}
    </div>
  {% endif %}
</div>


{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}