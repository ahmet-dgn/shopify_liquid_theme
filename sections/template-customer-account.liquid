<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <h1 class="text-2xl font-bold md:text-4xl md:leading-tight w-full text-center mb-4 flex-1">
    Account
  </h1>
  <div class="flex flex-col md:flex-row gap-4">
    {% assign number_of_orders = customer.orders | size %}
    <div class="w-full md:w-2/3 order-2 md:order-1 ">
      {% if number_of_orders > 0 %}
        <div class="w-full ">
          <h2 class="text-xl font-bold ">
            Order history</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
            {% paginate customer.orders by 12 %}
              {% for order in customer.orders %}
                <div class="relative">
                  <div class="w-full min-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                    {% if order.line_items.first.image %}
                      <img
                        src="{{ order.line_items.first.image |  image_url: width:250, height:250  }}"
                        width="250"
                        height="250"
                        class="w-full h-full object-center object-cover"
                        alt="{{ order.line_items.first.image.alt }}">
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            {% endpaginate %}
          </div>
        </div>
      {% else %}
        <div class="w-full h-80 flex items-center justify-center">
          <h2 class="text-base md:text-2xl font-medium">You don't have any orders</h2>
        </div>
      {% endif %}
    </div>

    <div class="order-1 md:order-2 w-full md:w-1/3 h-80 bg-gray-200"></div>
  </div>
</div>