<div class="w-full max-w-md mx-auto p-6" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm ">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 ">Sign in</h1>
      </div>
      <div class="mt-5">
        <!-- Form -->
        {% form 'customer_login' %}
          {% if form.errors %}
            <div class="bg-red-50 border border-red-200 text-sm text-red-800 rounded-lg p-4 my-4" role="alert">
              <div class="flex">
                <div class="flex-shrink-0">
                  {% render 'icon-failed' %}
                </div>
                <div class="ms-4">
                  <h3 class="text-sm font-semibold">
                    {{ form.errors | default_errors }}
                  </h3>
                </div>
              </div>
            </div>
          {% endif %}
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <label for="email_address" class="block text-sm mb-2 ">Email address</label>
              <div class="relative">
                <input
                  type="email"
                  name="customer[email]"
                  id="email_address"
                  autocomplete="email"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
              </div>

            </div>
            <!-- End Form Group -->

            {% if form.password_needed %}
              <!-- Form Group -->
              <div>
                <div class="flex justify-between items-center">
                  <label for="password" class="block text-sm mb-2 ">Password</label>
                  <a
                    x-on:click="loginForm = false; pwRecoverForm = true"
                    class="text-sm text-blue-600 decoration-2 hover:underline font-medium "
                    href="#">Forgot password?</a>
                </div>
                <div class="relative">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none "
                    aria-describedby="password-error">
                </div>
              </div>
              <!-- End Form Group -->
            {% endif %}

            <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none ">Sign in</button>
            <p class="mt-2 text-sm text-gray-600">
              Don't have an account yet?
              <a class="text-blue-600 decoration-2 hover:underline font-medium d" href="{{ routes.account_register_url}}">
                Sign up here
              </a>
            </p>
          </div>

          {% if shop.checkout.guest_login %}
            <hr class="my-6">
            {% form 'guest_login' %}
              <button
                type="submit"
                class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-blue-600  bg-white text-blue-600 hover:bg-blue-200 disabled:opacity-50 disabled:pointer-events-none "
                href="#">
                Contiune as a guest
              </button>
            {% endform %}
          {% endif %}
        {% endform %}
      <!-- End Form -->
      </div>

    </div>
  </div>
  <div x-show="pwRecoverForm" class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm ">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 ">Recover your password</h1>
      </div>
      <div class="mt-5">
        <!-- Form -->
        {% form 'recover_customer_password' %}
          {% if form.errors %}
            <div class="bg-red-50 border border-red-200 text-sm text-red-800 rounded-lg p-4 my-4" role="alert">
              <div class="flex">
                <div class="flex-shrink-0">
                  {% render 'icon-failed' %}
                </div>
                <div class="ms-4">
                  <h3 class="text-sm font-semibold">
                    {{ form.errors | default_errors }}
                  </h3>
                </div>
              </div>
            </div>
          {% endif %}
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <label for="email" class="block text-sm mb-2 ">Email address</label>
              <div class="relative">
                <input
                  type="email"
                  name="email"
                  id="email"
                  autocomplete="email"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
              </div>

            </div>
            <!-- End Form Group -->
            <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none ">Recover password</button>
            <p class="mt-2 text-sm text-gray-600">
              <a
                x-on:click="loginForm = true; pwRecoverForm = false"
                class="text-blue-600 decoration-2 hover:underline font-medium "
                href="#">
                Back to login
              </a>
            </p>
          </div>
        {% endform %}
      <!-- End Form -->
      </div>
    </div>
  </div>
</div>