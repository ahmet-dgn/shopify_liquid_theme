<div class="w-full max-w-md mx-auto p-6">
  <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm ">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 ">Sign up</h1>
      </div>
      <div class="mt-5">
        <!-- Form -->
        {% form 'create_customer' %}
          {% if form.errors %}
            <div class="bg-red-50 border border-red-200 text-sm text-red-800 rounded-lg p-4 my-4" role="alert">
              <div class="flex">
                <div class="flex-shrink-0">
                  {% render 'icon-failed' %}
                </div>
                <div class="ms-4">
                  <h3 class="text-sm font-semibold">
                    {{ form.errors | default_errors }}
                  </h3>
                </div>
              </div>
            </div>
          {% endif %}
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <label for="first_name" class="block text-sm mb-2 ">First name</label>
              <div class="relative">
                <input
                  type="text"
                  id="first_name"
                  name="customer[first_name]"
                  autocomplete="given-name"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                  required>
              </div>
            </div>
            <!-- End Form Group -->
            <!-- Form Group -->
            <div>
              <label for="last_name" class="block text-sm mb-2 ">Last name</label>
              <div class="relative">
                <input
                  type="text"
                  id="last_name"
                  name="customer[last_name]"
                  autocomplete="family-name"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                  required>
              </div>
            </div>
            <!-- End Form Group -->
            <!-- Form Group -->
            <div>
              <label for="email" class="block text-sm mb-2 ">Email address</label>
              <div class="relative">
                <input
                  type="email"
                  id="email"
                  name="customer[email]"
                  autocomplete="email"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                  required>
              </div>
            </div>
            <!-- End Form Group -->
            <!-- Form Group -->
            <div>
              <label for="password" class="block text-sm mb-2 ">Password</label>
              <div class="relative">
                <input
                  type="password"
                  id="password"
                  name="customer[password]"
                  autocomplete="new_password"
                  class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none "
                  required>
              </div>
            </div>
            <!-- End Form Group -->
            <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none ">Sign up</button>
            <p class="mt-2 text-sm text-gray-600 ">
              Already have an account?
              <a class="text-blue-600 decoration-2 hover:underline font-medium " href="{{ routes.account_login_url
 }}">
                Sign in here
              </a>
            </p>
          </div>
        {% endform %}
      <!-- End Form -->
      </div>
    </div>
  </div>
</div>