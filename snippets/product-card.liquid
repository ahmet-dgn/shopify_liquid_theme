<div class="flex flex-col bg-white border  shadow-sm rounded-xl ">
  <div class="overflow-hidden w-full h-auto rounded-t-xl ">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <img
          class="transition duration-1000 ease-in-out hover:scale-105 transform z-0"
          src="{{ product.featured_image |  image_url: width:500, height:500  }}"
          alt="{{ product.featured_image.alt }}"
          width="500"
          height="500">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'bg-gray-100 w-100 h-100 object-cover  rounded-t-xl' }}
      {% endif %}
    </a>
  </div>

  <div class="p-4 md:p-5">
    <h3 class="text-lg font-bold text-gray-800 hover:text-gray-900">
      <a href="{{ product.url }}">
        {{ product.title | truncatewords: 8 }}</a>
    </h3>
    <p class="mt-1 text-gray-500 ">
      {{ product.price | money }}
    </p>
  </div>
</div>