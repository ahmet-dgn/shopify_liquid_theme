{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media | image_url: width:650, height:920 }}"
      alt="{{ media.preview_image.alt }}"
      class="size-full object-cover"
      width="650"
      height="920"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'size-full object-cover h-96' }}

  {% when 'video' %}
    {{ media | video_tag: controls: true, autoplay: true, class: 'size-full object-cover' }}

  {% when 'model' %}
    {{ media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}
{% endcase %}
